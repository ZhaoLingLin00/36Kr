<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--新闻ListView的行布局-->
    <ImageView
        android:id="@+id/item_news_image_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/item_news_context_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="内容"
        android:textSize="24sp"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/item_news_image_img"/>

    <TextView
        android:id="@+id/item_news_author_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_news_image_img"
        android:layout_alignLeft="@id/item_news_context_tv"
        android:text="作者"
        android:layout_toRightOf="@id/item_news_image_img"/>

    <TextView
        android:id="@+id/item_news_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间"
        android:layout_toRightOf="@id/item_news_author_tv"
        android:layout_alignBottom="@id/item_news_image_img"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/item_news_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新闻类型"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@id/item_news_image_img"/>



</RelativeLayout>