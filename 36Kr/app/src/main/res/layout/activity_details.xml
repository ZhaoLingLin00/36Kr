<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/details_sv">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/details_photo_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@mipmap/logo" />

            <TextView
                android:id="@+id/details_author_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/details_photo_img"
                android:layout_toRightOf="@id/details_photo_img"
                android:text="作者" />

            <TextView
                android:id="@+id/details_introduce_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/details_photo_img"
                android:layout_toRightOf="@id/details_author_tv"
                android:background="@drawable/shape_author"
                android:text="作者"
                android:layout_marginLeft="3dp"
                android:textColor="#0f0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/details_author_tv"
                android:layout_below="@id/details_author_tv"
                android:layout_marginTop="5dp"
                android:text="简介" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/details_photo_img"
                android:background="#dcdcdc" />

            <TextView
                android:id="@+id/details_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:text="标题"
                android:layout_margin="10dp"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/details_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/details_title_tv"
                android:text="时间"
                android:layout_alignLeft="@id/details_title_tv"/>
            <WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/details_time_tv"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/webview"
                android:layout_margin="50dp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/news_icon_seek"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="寻求报导"
                    android:textSize="16sp"
                    android:layout_toRightOf="@id/img"
                    android:layout_alignBottom="@id/img"
                    android:textColor="@color/colorTheme"/>

            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/details_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:weightSum="5"
        android:background="#fff"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/details_back_img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:src="@mipmap/news_toolbar_icon_back" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:src="@mipmap/news_toolbar_icon_comment" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:src="@mipmap/news_toolbar_icon_favorite" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:src="@mipmap/news_toolbar_icon_share" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:src="@mipmap/news_toolbar_icon_more" />
    </LinearLayout>

</RelativeLayout>