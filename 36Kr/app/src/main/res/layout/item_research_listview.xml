<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--36kr研究院ListView的行布局-->
    <ImageView
        android:id="@+id/item_research_image_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/item_research_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_alignTop="@id/item_research_image_img"
        android:layout_toRightOf="@id/item_research_image_img"
        android:text="内容"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_research_author_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_research_image_img"
        android:layout_alignLeft="@id/item_research_title_tv"
        android:layout_toRightOf="@id/item_research_image_img"
        android:text="作者"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_research_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_research_image_img"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/item_research_author_tv"
        android:text="时间"
        android:textSize="12sp" />

</RelativeLayout>