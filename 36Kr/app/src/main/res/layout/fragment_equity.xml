<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/equity_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="股权投资"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/equity_title_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/nav_icon_search"

            />

        <ImageView
            android:id="@+id/equity_title_investment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/equity_title_search"
            android:src="@mipmap/nav_icon_activity" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/equity_tab_layout"
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:tabIndicatorColor="@color/colorTheme"
        app:tabIndicatorHeight="1dp">
    </android.support.design.widget.TabLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/equity_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.2">

    </android.support.v4.view.ViewPager>
</LinearLayout>