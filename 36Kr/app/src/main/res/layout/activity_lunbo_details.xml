<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >

    <LinearLayout
        android:id="@+id/lunbo_details_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/lunbo_back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:src="@mipmap/common_nav_icon_close" />

        <TextView
            android:id="@+id/lunbo_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="标题"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/lunbo_details_ll"
        android:background="#dcdcdc" />

    <WebView
        android:id="@+id/lunbo_webview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        />

    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">
            <TextView
                android:id="@+id/lunbo_apply_tv"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shape_lunbo_apply"
                android:text="我要报名"
                android:textColor="#fff" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/lunbo_more_tv"
                    android:layout_width="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="更多活动" />

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/lunbo_more_tv"
                    android:src="@mipmap/common_arrow" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/common_arrow"
                    android:layout_toRightOf="@id/img"/>
            </RelativeLayout>

        </LinearLayout>



    </RelativeLayout>


</RelativeLayout>