<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/search_logo_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@mipmap/seaarch_nav_icon_search" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/search_logo_img"
        android:background="@null"
        android:maxLines="1"
        android:hint="搜索新闻/用户/公司"
        android:layout_marginRight="60dp"
        android:layout_toRightOf="@id/search_logo_img"/>

    <TextView
        android:id="@+id/search_back_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/search_logo_img"
        android:text="取消"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:textColor="@color/colorTheme"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc"
        android:layout_below="@id/search_logo_img"/>

    <ImageView
        android:id="@+id/search_big_logo_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/search_ph_search"
        android:layout_centerInParent="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_big_logo_img"
        android:text="无搜索记录"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>