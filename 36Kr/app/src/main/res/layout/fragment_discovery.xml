<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:weightSum="3">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/discovery_company_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/discovery_icon_startup1" />

                    <TextView
                        android:id="@+id/discovery_company_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/discovery_company_img"
                        android:layout_centerInParent="true"
                        android:text="创业公司" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/discovery_research_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/discovery_icon_research1" />

                    <TextView
                        android:id="@+id/discovery_research_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/discovery_research_img"
                        android:layout_centerInParent="true"
                        android:text="36氪研究所" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/discovery_activity_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/discovery_icon_activity" />

                    <TextView
                        android:id="@+id/discovery_activity_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/discovery_activity_img"
                        android:layout_centerInParent="true"
                        android:text="近期活动" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/discovery_days_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/discovery_icon_days" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginBottom="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/discovery_days_img"
                    android:background="#000"
                    android:src="@mipmap/icon_close_connect" />

                <TextView
                    android:id="@+id/discovery_money_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:text="元  投资金额"
                    android:textSize="16sp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/discovery_money_tv"
                    android:layout_toLeftOf="@id/discovery_money_tv"
                    android:text="8888888"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/discovery_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/discovery_money_tv"
                    android:layout_below="@id/discovery_money_tv"
                    android:layout_marginTop="20dp"
                    android:text="人  认购人数"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/discovery_number_tv"
                    android:layout_toLeftOf="@id/discovery_number_tv"
                    android:text="88"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/discovery_indent_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/discovery_number_tv"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:text="接到订单" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/discovery_days_img"
                    android:layout_below="@id/discovery_indent_tv"
                    android:text="热门项目"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/discovery_project_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/discovery_number_tv"
                    android:layout_below="@id/discovery_indent_tv"
                    android:text="查看全部" />

                <View
                    android:id="@+id/discovery_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignLeft="@id/discovery_days_img"
                    android:layout_alignRight="@id/discovery_number_tv"
                    android:layout_below="@id/discovery_project_tv"
                    android:layout_marginTop="10dp"
                    android:background="#dcdcdc" />


                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@id/discovery_view"
                    android:id="@+id/discovery_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/discovery_project1_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/discovery_project_logo1_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_launcher"
                            android:layout_marginTop="20dp"
                            />
                        <TextView
                            android:id="@+id/discovery_project_name1_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="项目名字"
                            android:layout_toRightOf="@id/discovery_project_logo1_img"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/discovery_project_introduce1_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="项目介绍"
                            android:layout_below="@id/discovery_project_name1_tv"
                            android:layout_toRightOf="@id/discovery_project_logo1_img"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="创始人介绍"
                            android:layout_below="@id/discovery_project_introduce1_img"
                            android:layout_toRightOf="@id/discovery_project_logo1_img"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_below="@id/discovery_project1_img"
                        android:id="@+id/discovery_project2_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/discovery_project_logo2_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_launcher"
                            android:layout_marginTop="20dp"
                            />
                        <TextView
                            android:id="@+id/discovery_project_name2_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="项目名字"
                            android:layout_toRightOf="@id/discovery_project_logo2_img"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/discovery_project_introduce2_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="项目介绍"
                            android:layout_below="@id/discovery_project_name2_tv"
                            android:layout_toRightOf="@id/discovery_project_logo2_img"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="创始人介绍"
                            android:layout_below="@id/discovery_project_introduce2_img"
                            android:layout_toRightOf="@id/discovery_project_logo2_img"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_below="@id/discovery_project2_img"
                        android:id="@+id/discovery_project3_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/discovery_project_logo3_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_launcher"
                            android:layout_marginTop="20dp"
                            />
                        <TextView
                            android:id="@+id/discovery_project_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="项目名字"
                            android:layout_toRightOf="@id/discovery_project_logo3_img"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/discovery_project_introduce_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="项目介绍"
                            android:layout_below="@id/discovery_project_name_tv"
                            android:layout_toRightOf="@id/discovery_project_logo3_img"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="创始人介绍"
                            android:layout_below="@id/discovery_project_introduce_img"
                            android:layout_toRightOf="@id/discovery_project_logo3_img"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"/>
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/discovery_information_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/discovery_days_img"
                    android:layout_below="@id/discovery_rl"
                    android:text="投资速递"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/discovery_number_tv"
                    android:layout_below="@id/discovery_rl"
                    android:text="快速了解股权投资" />

                <View
                    android:id="@+id/discovery_view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignLeft="@id/discovery_days_img"
                    android:layout_alignRight="@id/discovery_number_tv"
                    android:layout_below="@id/discovery_information_tv"
                    android:layout_marginTop="10dp"
                    android:background="#dcdcdc" />

                <TextView
                    android:id="@+id/discovery_news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/discovery_days_img"
                    android:layout_below="@id/discovery_view2"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/shape_discovery_information"
                    android:text="行业新闻"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/discovery_trends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/discovery_view2"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_alignTop="@id/discovery_news"
                    android:layout_toRightOf="@id/discovery_news"
                    android:background="@drawable/shape_discovery_information"
                    android:text="项目动态"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/discovery_view2"
                    android:layout_marginBottom="20dp"
                    android:layout_alignTop="@id/discovery_news"
                    android:layout_toRightOf="@id/discovery_trends"
                    android:background="@drawable/shape_discovery_information"
                    android:text="行业新闻"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/discovery_view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#dcdcdc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:background="#fff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/discovery_text_good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:text="发现好项目"
                    android:textColor="@color/colorTheme"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/discovery_text_good"
                    android:layout_margin="15dp"
                    android:text="投资人每天都在看"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/discovery_ph_item" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="#fff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/discovery_text_seek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:text="寻找投资人"
                    android:textColor="@color/colorTheme"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/discovery_text_seek"
                    android:layout_margin="15dp"
                    android:text="顶级机构全面入驻"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/discovery_ph_investor" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            >
            <ImageView
                android:id="@+id/discovery_entrepreneurs_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:src="@mipmap/discovery_icon_entrepreneurs"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我是创业者"
                android:layout_toRightOf="@id/discovery_entrepreneurs_img"
                android:layout_alignTop="@id/discovery_entrepreneurs_img"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/equity_icon_list_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dcdcdc"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#fff"
            >
            <ImageView
                android:id="@+id/discovery_investor_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:src="@mipmap/discovery_icon_new_investor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我是专业投资人"
                android:layout_toRightOf="@id/discovery_investor_img"
                android:layout_alignTop="@id/discovery_investor_img"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/equity_icon_list_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>

    </LinearLayout>

</ScrollView>