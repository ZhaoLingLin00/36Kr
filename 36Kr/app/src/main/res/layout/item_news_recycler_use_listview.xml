<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--新闻ListView的行布局-->
    <ImageView
        android:id="@+id/item_news_image_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/item_news_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_alignTop="@id/item_news_image_img"
        android:layout_toRightOf="@id/item_news_image_img"
        android:text="内容"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_news_author_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_news_image_img"
        android:layout_alignLeft="@id/item_news_title_tv"
        android:layout_toRightOf="@id/item_news_image_img"
        android:text="作者"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_news_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_news_image_img"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/item_news_author_tv"
        android:text="时间"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_news_column_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_news_image_img"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="新闻类型"
        android:textSize="12sp" />

</RelativeLayout>